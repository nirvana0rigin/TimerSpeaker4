<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.nirvana0rigin.timerspeaker4.Config">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/black"
        android:id="@+id/base_config">

        <TextView
            style="@style/config_title"
            android:text="@string/config_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|left">

            <TextView
                style="@style/choice_title"
                android:text="@string/cars" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_car01f"
                android:id="@+id/car1" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_car02f"
                android:id="@+id/car2" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_car03f"
                android:id="@+id/car3" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_car04f"
                android:id="@+id/car4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|left">

            <TextView
                style="@style/choice_title"
                android:text="@string/interval" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_false"
                android:text="@string/sec_a_button"
                android:id="@+id/interval_a" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_false"
                android:text="@string/sec_b_button"
                android:id="@+id/interval_b" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_false"
                android:text="@string/sec_c_button"
                android:id="@+id/interval_c" />

            <Button
                style="@style/choice_button"
                android:background="@drawable/choice_false"
                android:text="@string/sec_d_button"
                android:id="@+id/interval_d" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:gravity="center_vertical|left"
            android:paddingLeft="84dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/darkgrey"
            android:text="@string/sec_a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/darkgrey"
            android:text="@string/sec_b" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/darkgrey"
            android:text="@string/sec_c" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="@color/darkgrey"
            android:text="@string/sec_d" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
